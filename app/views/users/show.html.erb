Welcome <%= @user.name.capitalize %>



<%= will_paginate @recipes %>
 
<div class="container">
	<% @recipes.each_with_index do |recipe, index| %>
		<div class="row<%= index %>">
			<% recipe.images.each do |all_img| %>
				<p class="img-response"><%= image_tag all_img %></p>	
				<p><%= recipe.title %></p>
				<p><%= recipe.description %></p>
				<p><%= recipe.price %></p>
				<%= link_to 'Cook This Meal', recipe_path(recipe.id) %>
				
			<% end %>
		</div>
		<% end %>
	 
</div> 
	
<%= will_paginate @recipes %>