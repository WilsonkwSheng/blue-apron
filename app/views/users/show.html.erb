Welcome <%= @user.name.capitalize %>

<%= will_paginate @recipes %>
 
<div class="container">
	<% @recipes.each_with_index do |recipe, index| %>
		<div class="recipe clearfix" id="recipe_<%= recipe.id %>">
			<div class="row<%= index %>">
				<% recipe.images.each do |all_img| %>
					<p class="img-response"><%= image_tag all_img %></p>	
					<p><%= recipe.title %></p>
					<p><%= recipe.description %></p>
					<p><%= recipe.price %></p>
					<%= link_to 'Cook This Meal', recipe_path(recipe.id) %>
					<% if current_user.superadmin? %>
						<%= link_to 'Edit This Meal', edit_recipe_path(recipe.id) %>
						<%= link_to "Delete", recipe_path(recipe.id), :method => :delete, data: {:confirm => "Are you sure?"}, :remote => true, :class => 'delete_recipe' %>
					<% end %>
				<% end %>
			</div>
		</div>
	<% end %>
</div> 
	
<%= will_paginate @recipes %>